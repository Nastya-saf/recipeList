<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.recipelist">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:required="false"/>
  <uses-permission android:name="android.permission.CAMERA"  android:required="false"/>
  <uses-feature android:name="android.hardware.camera" />
  <uses-feature android:name="android.hardware.camera.autofocus" />

  <application
          android:allowBackup="true"
          android:icon="@mipmap/ic_launcher"
          android:label="@string/app_name"
          android:roundIcon="@mipmap/ic_launcher_round"
          android:supportsRtl="true"
          android:theme="@style/AppTheme">
    <activity android:name=".CreateItemActivity"
              >
    </activity>
    <activity
            android:name=".ItemPageActivity"
            android:label="@string/title_activity_item_page"
            android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

</manifest>